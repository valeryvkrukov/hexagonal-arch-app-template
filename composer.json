{
  "name": "valeryvkrukov/hexagonal-arch-app-template",
  "description": "Template for symfony based application that uses hexagonal architecture.",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.0",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-sqlite3": "*",
    "composer/package-versions-deprecated": "1.11.99.4",
    "doctrine/doctrine-bundle": "^2.4",
    "doctrine/doctrine-migrations-bundle": "^3.1",
    "doctrine/orm": "^2.9",
    "fusonic/http-kernel-extensions": "^2",
    "nelmio/api-doc-bundle": "^4.4",
    "symfony/asset": "5.3.*",
    "symfony/console": "5.3.*",
    "symfony/dotenv": "5.3.*",
    "symfony/flex": "^1.3.1",
    "symfony/framework-bundle": "5.3.*",
    "symfony/messenger": "5.3.*",
    "symfony/monolog-bundle": "3.7.*",
    "symfony/runtime": "5.3.*",
    "symfony/security-bundle": "5.3.*",
    "symfony/serializer": "5.3.*",
    "symfony/twig-bundle": "5.3.*",
    "symfony/validator": "5.3.*",
    "symfony/yaml": "5.3.*",
    "twig/extra-bundle": "^3.3",
    "twig/twig": "^3.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.1",
    "phpstan/phpstan": "^0.12.99"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "replace": {
    "paragonie/random_compat": "2.*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php71": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse --memory-limit=512M",
    "phpcs-check": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist -v --dry-run --diff --using-cache=yes",
    "phpcs-fix": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist -v --using-cache=yes",
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "5.3.*"
    }
  }
}
